                <TableColumn fx:id="colEventId" prefWidth="60.0" text="Event ID" />
                <TableColumn fx:id="colEventNom" prefWidth="150.0" text="Event Name" />
                <TableColumn fx:id="colReservationId" prefWidth="80.0" text="Reservation ID" />
