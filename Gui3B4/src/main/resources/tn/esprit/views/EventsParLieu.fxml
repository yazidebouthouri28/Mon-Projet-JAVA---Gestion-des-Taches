        <HBox alignment="CENTER_RIGHT" spacing="10" styleClass="table-footer">
            <padding>
                <Insets bottom="10" left="15" right="15" top="10" />
            </padding>
            <Button onAction="#handleClose" styleClass="close-button" text="Close" />
        </HBox>
    </bottom>
</BorderPane>
